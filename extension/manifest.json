{
  "manifest_version": 3,
  "name": "GuardianLink - URL Security Shield",
  "version": "2.0.0",
  "description": "Real-time malicious URL detection with website sync and user account linking",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation",
    "scripting",
    "notifications",
    "downloads",
    "contextMenus",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3001/*",
    "http://localhost:3002/*",
    "http://localhost:3000/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:3001 http://localhost:3002 http://localhost:3000 https://*"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "ui/dashboard.html",
    "default_title": "GuardianLink Dashboard"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["ui/warning.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
