{
  "manifest_version": 2,
  "name": "GuardianLink - URL Security Shield",
  "version": "2.0.0",
  "description": "Real-time malicious URL detection with complete page blocking until security scan completes",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation",
    "notifications",
    "contextMenus",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["purify.min.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_popup": "ui/dashboard.html",
    "default_title": "GuardianLink Dashboard"
  },
  "icons": {
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    "ui/warning.html",
    "ui/scanner.html",
    "ui/scanner.js",
    "purify.min.js",
    "assets/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "guardianlink@example.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    },
    "gecko_android": {
      "strict_min_version": "142.0"
    }
  }
}
