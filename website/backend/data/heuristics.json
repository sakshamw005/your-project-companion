{
  "version": "1.0",
  "description": "GuardianLink heuristic scoring rules",
  "rules": [
    {
      "id": "url:ip_literal",
      "category": "url",
      "description": "URL uses raw IP instead of domain",
      "condition": { "url_uses_ip": true },
      "score": 15
    },
    {
      "id": "url:long_length",
      "category": "url",
      "description": "Unusually long URL",
      "condition": { "url_length_gt": 100 },
      "score": 10
    },
    {
      "id": "url:encoded_chars",
      "category": "url",
      "description": "URL contains encoded characters",
      "condition": { "url_encoded": true },
      "score": 8
    },
    {
      "id": "url:suspicious_keywords",
      "category": "url",
      "description": "URL contains phishing-related keywords",
      "condition": { "url_keywords_any": ["login", "verify", "secure", "account", "update"] },
      "score": 10
    },
    {
      "id": "domain:age_lt_7d",
      "category": "domain",
      "description": "Domain registered less than 7 days ago",
      "condition": { "domain_age_days_lt": 7 },
      "score": 30
    },
    {
      "id": "domain:age_7_30d",
      "category": "domain",
      "description": "Domain registered within last 30 days",
      "condition": { "domain_age_days_lt": 30 },
      "score": 20
    },
    {
      "id": "domain:age_30_180d",
      "category": "domain",
      "description": "Domain younger than 6 months",
      "condition": { "domain_age_days_lt": 180 },
      "score": 10
    },
    {
      "id": "domain:risky_tld",
      "category": "domain",
      "description": "Domain uses high-risk TLD",
      "condition": { "tld_in": ["xyz", "top", "tk", "ml", "cf", "gq", "work"] },
      "score": 10
    },
    {
      "id": "brand:exact_match",
      "category": "brand",
      "description": "Domain contains known brand name",
      "condition": { "brand_match": true },
      "score": 25
    },
    {
      "id": "brand:hyphenated",
      "category": "brand",
      "description": "Brand name combined with hyphen or suffix",
      "condition": { "brand_hyphenated": true },
      "score": 15
    },
    {
      "id": "brand:typosquat",
      "category": "brand",
      "description": "Domain resembles brand via typo",
      "condition": { "brand_typosquat": true },
      "score": 20
    },
    {
      "id": "ssl:no_https",
      "category": "ssl",
      "description": "URL does not use HTTPS",
      "condition": { "https": false },
      "score": 30
    },
    {
      "id": "ssl:cert_age_lt_7d",
      "category": "ssl",
      "description": "SSL certificate is very new",
      "condition": { "ssl_age_days_lt": 7 },
      "score": 15
    },
    {
      "id": "ssl:self_signed",
      "category": "ssl",
      "description": "Self-signed SSL certificate",
      "condition": { "ssl_self_signed": true },
      "score": 20
    },
    {
      "id": "ssl:domain_mismatch",
      "category": "ssl",
      "description": "Certificate domain does not match URL",
      "condition": { "ssl_domain_mismatch": true },
      "score": 30
    },
    {
      "id": "asn:high_abuse",
      "category": "network",
      "description": "ASN has high abuse reputation",
      "condition": { "asn_abuse_score_gt": 70 },
      "score": 20
    },
    {
      "id": "asn:bulletproof_host",
      "category": "network",
      "description": "Known bulletproof hosting ASN",
      "condition": { "asn_bulletproof": true },
      "score": 30
    },
    {
      "id": "page:login_form",
      "category": "behavior",
      "description": "Page contains login form",
      "condition": { "login_form_detected": true },
      "score": 20
    },
    {
      "id": "page:password_brand_combo",
      "category": "behavior",
      "description": "Password input with brand indicators",
      "condition": { "password_field": true, "brand_match": true },
      "score": 30
    },
    {
      "id": "page:js_redirect",
      "category": "behavior",
      "description": "JavaScript redirect on page load",
      "condition": { "js_redirect": true },
      "score": 15
    },
    {
      "id": "page:external_post",
      "category": "behavior",
      "description": "Form submits data to external domain",
      "condition": { "external_form_action": true },
      "score": 20
    }
  ]
}
